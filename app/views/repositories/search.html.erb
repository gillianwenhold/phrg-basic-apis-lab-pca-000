<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>
<div>
  <% if @items %>
    <%= @items.each do |h| %>
      <h3><%= h["name"] %></h3>
      <p><%= h["description"]%></p>
      <a href="<%= h["html_url"] %>" target="_blank"><%= h["html_url"] %></a>
    <% end %>
  <% end %>
</div>

